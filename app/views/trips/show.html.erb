<div
  class="map-trips"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-trip-value="<%= @trip.to_json %>"
  data-map-api-key-value="<%=  ENV['MAPBOX_API_KEY'] %>" >
</div>
<div class="trip-card">
  <div class="trip-title">
    <p>
      <i class="fa-solid fa-star"></i>
      <div>
        Start Point:
        <%= @trip.start_geolocation['display_name']%>
      </div>
    </p>
  </div>
  <div class="trip-info">
    <ol>
      <% @sidequests.each do |sidequest|%>
        <li>
          <%= link_to sidequest.name, trip_side_quest_path(@trip, sidequest)%>
        </li>
      <%end %>
    </ol>
  </div>
  <div class="trip-title">
    <p>
      <i class="fa-solid fa-star"></i>
      <div>
        End Point:
        <%= @trip.end_geolocation['display_name']%>
      </div>
    </p>
  </div>
</div>
    <link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-directions/v4.1.1/mapbox-gl-directions.css" type="text/css">

<div class="footer-info text-center">
  <div class="btn">
    <%= link_to 'NAVIGATE', @google_maps_directions_url, class: " btn foottext" %>
  </div>
</div>
