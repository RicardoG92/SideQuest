<div class = "map-trips">
  <div style="width: 100%; height: 292px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%=  ENV['MAPBOX_API_KEY'] %>" >
  </div>
</div>

<div class = "trip-card">
    <div class = "trip-title">
      <p><i class="fa-solid fa-star">
      </i>
        <div>
          Start Point:
          <%= @trip.start_location.address%>
        </div>
      </p>
    </div>
    <div class = "trip-info">
      <ul>
        <% @sidequests2.each do |sidequest|%>
          <li>
            <%= link_to sidequest.name, side_quest_path(sidequest.id)%>
          </li>
        <%end %>
      </ul>
    </div>
    <div class = "trip-title">
      <p><i class="fa-solid fa-star">
        </i>
        <div>
          End Point:
          <%= @trip.end_location.address%>
        </div>
      </p>
    </div>
</div>
<div class = "footer-info text-center">
  <div class = "btn">
    <%= link_to 'Navigate', side_quests_path, class: "btn btn-link" %>
  </div>
</div>
