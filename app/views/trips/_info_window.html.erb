<% if sidequest.photo.present? %>
<div class = 'container'>
  <%= cl_image_tag sidequest.photo.key, height: 180, width: 200, crop: :fit %>
  <h2><%= sidequest.name %></h2>
  <p>Address:<%= sidequest.address %></p>
  <p><%= sidequest.description%></p>
  <div>
    <%= link_to "Explore", trip_side_quest_path(@trip, sidequest), class: "btn-flat"  %>
     <%= link_to "Add Stop", new_trip_side_quest_stop_path(@trip, sidequest ), class: "btn-flat"  %>
  </div>
</div>
<% else %>
<div class = 'container'>
  <h2><%= sidequest.name %></h2>
  <p>Address:<%= sidequest.address %></p>
  <p><%= sidequest.description%></p>
  <div>
    <%= link_to "Explore", trip_side_quest_path(@trip, sidequest), class: "btn-flat"  %>
     <%= link_to "Add Stop", new_trip_side_quest_stop_path(@trip, sidequest ), class: "btn-flat"  %>
  </div>
</div>
<%end%>
