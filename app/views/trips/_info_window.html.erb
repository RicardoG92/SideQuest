<div class="sidequest-popup">
  <div class="scrollable-section">
  <% if sidequest.photo.present? %>
    <%= cl_image_tag sidequest.photo.key, width: 400, crop: :fit, style: "width: 100%; max-height: 110px; object-fit: cover; object-position: center;" %>
  <%end%>
    <h2><%= sidequest.name %></h2>
    <p class="sidequest-popup-address"><%= sidequest.address %></p>
    <p class="sidequest-popup-description"><%= sidequest.description%></p>
  </div>
  <div class="sidequest-popup-links">
    <%= link_to "Explore", trip_side_quest_path(@trip, sidequest), class: "btn-flat"  %>
    <%= link_to "Add Stop", new_trip_side_quest_stop_path(@trip, sidequest ), class: "btn-flat"  %>
  </div>
</div>

<% comment do %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Large modal</button>

  <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
      </div>
    </div>
  </div>
<% end %>
