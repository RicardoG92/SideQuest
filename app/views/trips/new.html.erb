<div class = 'container sidequest-image-trip-page mt-3 mb-4'>
  <div id="carouselExampleControls" class="carousel slide mt-2" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "torresdelpaine.jpeg" %>
        <div class="carousel-caption">
          <div class="sidephoto-caption">
            <h5>Patagonia, Argentina</h5>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag "bigbend.jpg" %>
        <div class="carousel-caption">
          <div class="sidephoto-caption">
            <h5>Big Bend National Park, Texas</h5>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <%= image_tag "bigdinodrumheller.jpeg" %>
        <div class="carousel-caption">
          <div class="sidephoto-caption">
            <h5>Worldâ€™s Largest Dinosaur, Drumheller, AB</h5>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
<%= simple_form_for @trip do |f| %>
  <div class = "container mt-3">
    <div class="field">
      <i class="fa-solid fa-magnifying-glass"></i>
      <%= f.input :start_location, :label => "Origin" %>
    </div>
    <div class="field">
      <i class="fa-solid fa-magnifying-glass"></i>
      <%= f.input :end_location, :label =>  "Destination"%>
    </div>
  </div>

  <div class = "footer-info">
      <%= f.button :submit, 'SEARCH', class: "foottext"%>
  </div>
<%end %>
