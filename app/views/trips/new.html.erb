<h1>Insert the starting point</h1>
<div class="container py-5">
  <div class="column">
    <div class="col-12 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2>Plan Your Next Trip</h2>
        <%= simple_form_for @trip do |f| %>
          <%= f.input :start_point, placeholder: 'Toronto' %>
          <%= f.input :end_point, placeholder: 'Niagara' %>
          <div class = "footer" id= "footer-info">
            <%= f.submit %>
          </div>
          <%#= link_to "Cancel", root_path, class: 'btn btn-outline-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="navbar-sidequests">
    <div class = "knight-logo">
      <img src="app/assets/images/Groupnavbar-knight.png" alt="Knight on Horseback Logo">
    </div>
    <div class = "avatar-hex">
    </div>
  </div>
  <div class="content">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="..." alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="..." alt="Third slide">
        </div>
    </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
    <div class="preferences-form">
      <%= simple_form_for @trip do |f| %>
        <%= f.input :start_point %>
        <%= f.input :end_point %>
        <label class="form-label range optional" for="user_mood">Distance From Main Road</label>
        <input class="form-range numeric range optional" type="range" step="1" name="user[mood]" id="user_mood">
      <%end %>
    </div>
  </div>
  <div class="footer">
  </div>
</div>
