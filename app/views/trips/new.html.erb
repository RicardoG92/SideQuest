<h1>Insert the starting point</h1>
<div class="container py-5">
  <div class="column">
    <div class="col-12 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2>Plan Your Next Trip</h2>
        <%= simple_form_for @trip do |f| %>
          <%= f.input :start_point, placeholder: 'Morty' %>
          <%= f.input :end_point, placeholder: 'Corgi' %>
          <%= f.submit class: 'btn btn-outline-success' %>
          <%= link_to "Cancel", root_path, class: 'btn btn-outline-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
