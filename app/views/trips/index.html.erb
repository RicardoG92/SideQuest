<div class = 'text-center mb-3 mt-3'>
  <h1>My Trips</h1>
</div>
<div class = "mt-5">
  <% @trips.each do |trip| %>
    <div class = "trip-list-card">
      <div class = 'container'>
        <div class = 'trip-list-title' >
          <%= trip.start_location %>
          â†’
          <%= trip.end_location %>
        </div>
        <div class="trip-date">
          Your trip is on: <%= trip.created_at.strftime("%Y-%m-%d") %>
        </div>
        <div class="sidequest-number">
          <%= trip.stops.count %> Sidequests
        </div>
        <div class="trip-link">
          <%= link_to "See Visted Quests", trip_path(trip), class:"trip-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
