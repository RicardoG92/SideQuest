<div class = 'container'>
  <div class="column">
    <div class="col-12 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2 class = 'text-center'>Leave a Review</h2>
        <%= simple_form_for [@trip, @sidequest, @review] do |f| %>
          <%= f.input :rating, collection: 0..5 %>
          <%= f.input :body, :label => "Review"%>
          <div class="submit-review-btn">
            <%= f.submit class: 'btn-flat w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
